.weui-search-bar__form {
  position: relative;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
}

.weui-search-bar__input {
  height: 60rpx;
}

.weui-icon-search_in-box {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.weui-search-bar__cancel-btn {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.weui-icon-clear {
  top: 4rpx;
}

.flex-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
}